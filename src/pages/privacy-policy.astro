// privacy-policy.astro - Página de Políticas de Privacidad para BEMYTECH
// Estructura preparada para pegar políticas personalizadas

import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
import { getTranslationsForSSR } from "../utils/i18n";

// Get language from URL params or default to Spanish
